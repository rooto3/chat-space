.list-items
  .list-items__top
    .list-items__top__name
      = message.user.name
    .list-items__top__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .list-items__down
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'list-items__down__image' if message.image.present?
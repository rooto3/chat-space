.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path do
          = icon("far", 'edit' , class: "top-items__icons")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'top-items__icons')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-items
        = link_to group_messages_path(group),class: "link" do
          .group-items__name
            = group.name
          .group-items__content
            = group.show_last_message

    



